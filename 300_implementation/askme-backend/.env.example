# AskMe Backend - Environment Configuration
# Copy this file to .env and add your credentials

# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration (shared with ai-models-discoverer_v3)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# Free-Tier Provider API Keys
# Priority: Google (least restrictive) > Groq > OpenRouter (most restrictive)

# Google AI (Gemini) - Least restrictive rate limits
GOOGLE_API_KEY=your_google_api_key
GEMINI_API_KEY=your_google_api_key

# Groq - Rate limits unknown, monitor usage
GROQ_API_KEY=your_groq_api_key

# OpenRouter - Most restrictive, use as fallback
OPENROUTER_API_KEY=your_openrouter_api_key

# Optional: Other providers (not prioritized for free tier)
MISTRAL_API_KEY=
COHERE_API_KEY=
HUGGINGFACE_API_KEY=
AI21_API_KEY=
REPLICATE_API_KEY=
TOGETHER_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_SUSPICIOUS=10

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
TRUST_PROXY=true

# Logging
LOG_LEVEL=info
